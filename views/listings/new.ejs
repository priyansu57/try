<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">
        <br></br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data" >  <!-- enctype help to send file in form -->
        <div class="mb-3">
            <label for="title" class="form-label">Title :</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control"  required />
            <div class="valid-feedback">
                Look's Good !!
            </div>
            <div class="invalid-feedback">
              Enter valid Name !!
            </div>
         </div>
         
         <div class="mb-3">
             <label for="description" class="form-label">description :</label>
             <textarea name="listing[description]"  type="text" class="form-control" placeholder="Enter description" required></textarea>
             <div class="valid-feedback">
                Look's Good !!
            </div>
            <div class="invalid-feedback">
                Enter valid description &reg;
            </div>
         </div>
         
         
          <div class="mb-3">
            <label for="image" class="form-label">Upload image :
            </label>
            <input name="listing[image]"  type="file" class="form-control"  />
            <div class="valid-feedback">
               Look's Good !!
           </div>
           <div class="invalid-feedback">
               Enter valid Image &reg;
           </div>
         </div>

         <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price :</label>
                <input name="listing[price]" type="number" class="form-control" placeholder="Enter price" required/>
                <div class="valid-feedback">
                    Look's Good !!
                </div>
                <div class="invalid-feedback">
                    Enter valid Price amount &reg;
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">location :</label>
                <input name="listing[location]" type="text" class="form-control"  placeholder="Enter location" required/>
                <div class="valid-feedback">
                    Look's Good !!
                </div>
                <div class="invalid-feedback">
                    Enter valid Location &reg;
                </div>
            </div>
         </div>
         
         <div class="mb-3">
             <label for="country" class="form-label">country :</label>
             <input name="listing[country]"  type="text" class="form-control" placeholder="Enter country" required />
             <div class="valid-feedback">
                Look's Good !!
            </div>
            <div class="invalid-feedback">
                Enter valid Country &reg;
            </div>
         </div>
         
       <br>
         <button class="btn btn btn-danger ">Edit the list</button>
         <br></br>
    </form>
</div>
</div>